doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= t('appName')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet")
  body.d-flex.flex-column.min-vh-100
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.mb-3
      .container
        a.navbar-brand(href="/")= t('appName')
        button.navbar-toggler(
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
        )
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav
            li.nav-item
              a.nav-link(href="/users")= t('users')
          ul.navbar-nav.ms-auto
            li.nav-item
              a.nav-link(href="/session/new")= t('signIn')
            li.nav-item
              a.nav-link(href="/users/new")= t('signUp')

    .container.flex-grow-1
      block content

    footer.footer.bg-light.mt-auto
      .container.py-3
        .text-center
          | Â© 2024 #{t('appName')}

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js") 